<div class="well bs-component">
    <form class="form-horizontal">
        <fieldset>
            <legend>Adicionar produto</legend>
            <div class="form-group">
                <label for="inputNome" class="col-lg-2 control-label">Nome</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputNome" placeholder="Nome">
                </div>
            </div>

            <div class="form-group">
                <label for="inputQtdMinima" class="col-lg-2 control-label">Qtd. Mínima</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputQtdMinima" placeholder="Qtd. Mínima">
                </div>
            </div>

            <div class="form-group">
                <label for="inputQtd" class="col-lg-2 control-label">Quantidade</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputQtd" placeholder="Quantidade total">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">É consumível?</label>
                <div class="col-lg-10">
                    <div class="radio">
                        <label>
                            <input type="radio" name="inputConsumivel" id="inputConsumivel1" value="1">
                            Sim
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="inputConsumivel" id="inputConsumivel2" value="0" checked="">
                            Não
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button class="btn btn-default">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </fieldset>
    </form>
    <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
</div>