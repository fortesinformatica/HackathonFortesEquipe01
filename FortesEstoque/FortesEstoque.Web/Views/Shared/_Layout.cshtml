<!DOCTYPE html>
<html>
<head>
    <title>Gerenciador de Estoque</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color: #73AFE8;">
        <div class="container">
            <div class="navbar-header" style="margin-top: 12px;">
                <a class="navbar-brand" href="/gerencia">
                    Fortes
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav" style="position: relative; margin-top: 15px;">
                    <li @{if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Produto") { <text> class="active" </text>  } }>
                        <a href="@Url.Action("Index", "Produto")">Produtos</a>
                    </li>

                    <li @{if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Movimentacao") { <text> class="active" </text>  } }>
                        <a href="@Url.Action("Index", "Movimentacao")">Movimentação</a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Usuario")">Usuários</a>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container" style="position: relative; margin-top: 85px;">
        @RenderBody()
    </div>
</body>
</html>
